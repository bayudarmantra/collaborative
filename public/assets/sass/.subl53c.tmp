/* GLOBAL VARIABLES & MIXINS
 * Variabel global yang akan digunakan dalam website */

 @import "compass/css3";

 $primary-color:#1E8BC3;
 $radius:0;
 $user-body:#E9EAED;
 $home-body:#FFF;
 $btn-padding:6px 12px;

 @mixin border-radius($radius){
  border-radius: $radius;
  background-clip: padding-box;
 }


 /*----------------------------------------------------*/

 /* Custom Button
  *
  */

  .animate{
  	@include single-transition(all,0.1s);
  }

 .cs-btn{
  position: relative;
  padding: 5px 12px;
  text-align:center;
  color:#FFF;
  line-height:1.42857143;
  font-family:'Oswald', Helvetica;
  font-size: 14px;
  font-weight: 400;
  white-space: nowrap;
  display: inline-block;
  margin-bottom: 0;
  background-image: none;
  border: 1px solid transparent;
  vertical-align: middle;

	  &:active{
	  	 @include translate(0px,5px);
	 	 border-bottom: 1px solid;
	  }

	  &:hover, &:visited{
	  	text-decoration: none;
  		color: #FFF;
	  }
 }

 .blue{
 	background-color: #3498DB;
    border-bottom: 5px solid #2980B9;
    text-shadow: 0px -2px #2980B9;
 }

  /*----------------------------------------------------*/

 /* GLOBAL SETUP
 * Pengaturan global yang digunakan dalam website */
html, body{
  height: 100%;
}

 a{
 	color:$primary-color;
 }

 .container-fluid{
  padding-left: 0;
  padding-right: 0;
  margin-right: 0;
  width: 100%;
 }

 .row{
  margin-right:0;
 }

 .navbar{
 	@include border-radius($radius);

 	.navbar-nav > li > a.nav-btn{
	  padding-top: 5px;
	  padding-bottom: 5px;
	  margin-top: 10px;
	  color: #FFF;
	}
 }

 .user-navbar{
  background-color: #0D8FDB;
  border-bottom:5px solid #6BB9F0;

  a{
  	color: #FFF;
  }
}

 .home-body{
 	background-color:$home-body;
 }

 .user-body{
 	background-color:$user-body;
 }

 .wrapper-fixed{
 	width: 1000px;
 	margin:0 auto;
 }

 .fixed-wrapper{
 	width:90%;
    margin: 0 auto;
 }

 /*----------------------------------------------------*/


/* FRONTEND PAGES
 * Berisi style css untuk halaman website untuk user */

/*Homepage*/
.feature-panel{
  margin-top: 40px;
}

.vcenter{
  position: relative;
  top: 30%;
}

.special{
	height:100%;

	.main-banner{
	  height: 100%;
	  background: url('../images/home_2.jpg') no-repeat center center;
	  background-size: cover; 
	  margin-top: 0;
	  padding-right: 0;
	}
}

/*User Page*/
.fixed-wrapper{
  width:90%;
  margin: 0 auto;
}

/*Add Post*/
.panel-default{
	margin-bottom:10px;

	.add-post-wrapper .form-control, .textarea{
	  border-radius: 0;
	}

	> .add-post-heading{
		background-color:#6C7A89;
	    color:#FFF;
	    border-radius:0;
	    border-bottom:5px solid $primary-color;
	}

	.add-post-content{
		position: relative;
  		left: 15px;

  		span{
  		 margin-right:10px;	
  		}
	}
}

/*Post*/
.post-wrapper{
  outline: 1px solid #DDD;
  margin-bottom:10px;

  .post{
  	padding: 10px;
    border-bottom: 1px solid #DDD;
  }

  .post-comment{
  	margin-top: 0;
    padding: 10px 10px 10px 10px;
    background-color: #F0F0F0;
  }

  .add-post-comment{
  	.textarea{
  	   width: 535px;
       height: 10px;
  	}
  }
}

.panel-title{
	a.add-post{
	  display: block;
      text-decoration: none;

      &:hover, &:visited{
      	text-decoration: none;
      }
	}
}

/*Content*/
.content{
  background-color: #FFF;
  margin-bottom: 20px;

	  .content-header{
	   padding: 10px;
	   background-color: #2C3E50;
	   color: #FFF;
	  }

	  .content-body{
	   padding: 10px;
	  }

	.content-media{
	  padding: 5px;
	  position: relative;
	}

	.post-time{
	  margin-top: -5px;
	  padding-bottom: 10px;

	  a{
	  	font-size: 12px;
			color: #BBB;
	  }
	}    
}

/*Left Sidebar*/
.sidebar-wrapper{
  background-color: #F7F7F7;
  padding: 10px 0 0 0;
  color: #333;
  outline: 1px solid #DDD;
}

.sidebar-title{
  padding: 5px 10px;
  background-color: #2C3E50;
  color: #FFF;
  border-bottom: 5px solid #0D8FDB;
  font-weight: 600;
  font-size: 15px;
  margin: 0;
  text-shadow: 0px 1px 0px rgba(0,0,0,.5);
}

.list-group{
  margin-bottom:0;
}

a.sidebar-item{
  background-color: transparent;
  color: #333;
  border-top:none;
  border-right: none;
  border-left:none;
  border-bottom: 1px solid #EAE8E8;
  padding: 5px 15px;
  position: relative;

  &:hover{
  	background-color: #0D8FDB;
    color: #FFF;

    .arrow-right{
	    width: 0; 
		height: 0; 
		border-top: 13px solid transparent;
	    border-bottom: 16px solid transparent;
	    border-left: 12px solid #0D8FDB;
	    position: relative;
	    left: 41px;
	    top: -4px;
    }
  }

  &:first-child, &:last-child{
  	border-radius: 0;
  }
}

/*Right Sidebar*/
.sidebar-right{
  background-color: #2B2F38;
  padding-right:10px;
  padding-left: 10px;
  padding-bottom: 10px;
  color: #FFF;
}

.sidebar-right-media{
  border-bottom:1px dotted #FFF;
  padding-bottom: 10px;
}

/*Member List*/
.member-list-wrapper{
  margin: 10px 0 0 5px;
}

.member-list-thumb{
  padding: 5px;
  margin-bottom: 5px;
}


/*----------------------------------------------------*/